<% if @gossip.errors.any? %>
<div class="alert alert-danger text-center" role="alert">
  Tu as mal rempli le formulaire. Réessaye !
</div>
<% else %>
<% end %>



<hr style="height:2px;border-width:0;color:gray;background-color:gray"> 
<h2 class="text-center">Création de ton gossip</h2><br/>
<hr style="height:2px;border-width:0;color:gray;background-color:gray"> 

<%= form_tag url_for(action: 'create'), method: "post" do %>

<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <%= label_tag 'Titre du gossip :' %>
      <%= text_field_tag 'title', @gossip.title %>
      <br /> <br />

      <%= label_tag 'Contenu du gossip :' %>
      <%= text_area_tag 'content', @gossip.content %>
      <br /> <br />

      <%= submit_tag "Publier mon gossip" %>

    <% end %>
