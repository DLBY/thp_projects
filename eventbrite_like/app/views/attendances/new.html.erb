<br/>
<div class="container text-center">
<%= form_tag event_attendances_path(params[:event_id]) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Prix de la participation : <%= @event.price %> €</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Inscription à l'évenement <%=@event.title%>"
          data-amount="<%= @event.price * 100%>"
          data-locale="auto"
          data-currency='eur'
          >
          </script>
          
<% end %>
</div>