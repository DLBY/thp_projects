<div class="container">
    <div class="row my-2">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Infos</a>
                </li>
            </ul>
            <div class="tab-content py-4">
                <div class="tab-pane active" id="profile">
                    <h5 class="mb-3">Profil utilisateur</h5>
                    <div class="row">
                        <div class="col-md-6">

                            <h6><%= @user.first_name %> <%= @user.last_name %> </h6>
                            <p>
                                Description : <%= @user.description %><br/>
                                Email : <%= @user.email %>
                            </p>
                            <p><%= link_to "Editer profil", edit_user_registration_path %></p>
                        </div>
                      
                        <div class="col-md-12">
                            <h5 class="mt-2"><span class="fa fa-clock-o ion-clock float-right"></span> Évènements récents</h5>
                            <% @user.event_admins.each do |event| %>
                            <table class="table table-sm table-hover table-striped">
                                <tbody>                                    
                                    <tr>
                                        <td>
                                            <%= event.title%>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <% end %>
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center">
<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>
<h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "Changer" %>
<% end %>

        </div>
    </div>
</div>